@model UsefulUrl


<h2> Добавление новой ссылки в базу данных </h2>

<form class="form-inline mt-5 fs-3" asp-action ="NewUrl" asp-controller = "Games" style ="width:400px" >

    <div class="form-group mt-2 mb-2">
        <label asp-for="Url" class="control-label">Ссылка</label>
        <input type="text" asp-for="Url" class="form-control" />
    </div>

    <div class="form-group mt-2 mb-2">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>

    <div class="form-group fs-3 mt-3">
        <input type="submit" value="Добавить" class="btn btn-primary btn-lg px-4 gap-3" />
    </div>

</form>